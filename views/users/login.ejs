<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form method="post" action="/login" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <small class="text-muted">
          ⚠️ Demo credentials only. Do not use real passwords.
        </small>
      </div>

      <div
        class="card p-2 mb-2 bg-light border-secondary"
        style="max-width: 300px"
      >
        <p class="mb-1 fw-bold" style="font-size: 0.9rem">
          Test Authorization & CRUD:
        </p>
        <ul class="list-unstyled mb-1 ms-2" style="font-size: 0.9rem">
          <li class="mb-0">
            <strong>Username:</strong>
            <code>Sam</code>
          </li>
          <li class="mb-0">
            <strong>Password:</strong>
            <code>6397</code>
          </li>
        </ul>
        <p class="mt-1 mb-0 text-muted" style="font-size: 0.75rem">
          Log in to see Edit/Delete on the first listing.
        </p>
      </div>

      <br />

      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
